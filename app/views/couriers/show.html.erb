<%= render 'nav_bar' %>

<div class="container">
  <div class="card">
    <div class="card-body">
      <div class="card-title text-center">
        <div class="row">
          <div class="col">
        <%= link_to "Edit", edit_courier_path(@courier) %>
          </div>
          <div class="col">
          <h2><%= @courier.name %> (<%= @courier.email %>)</h2>
          </div>
          <div class="col">
        <%= link_to "Delete", courier_path(@courier),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
      <p class="card-text">
        <%= render "packages", courier: @courier%>
      </p>
      <div class="row">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#packageModal">
          Add new package
        </button>
      </div>
    </div>
  </div>
</div>

<%= render "add_package", courier: @courier%>
