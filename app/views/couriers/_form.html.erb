<%= form_with model: @courier do |form| %>
  <div class="row">
    <%= form.label :name %><br>
    <%= form.text_field :name, class:"form-control", type:"text"%>
  </div>

  <div class="row">
    <%= form.label :email %><br>
    <%= form.text_field :email, type: "email", class:"form-control", placeholder: "example@email.com" %>
  </div>

  <div class="text-center">
    <%= form.submit "Save", class:"btn btn-primary mb-3" %>
  </div>
<% end %>
